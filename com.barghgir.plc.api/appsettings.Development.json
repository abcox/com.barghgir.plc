{
  "AllowedHosts": "*",
  "AppInfo": {
    "ContactEmail": "solmaz@barghgir.com",
    "ContactName": "Solmaz Barghgir"
  },
  "ConnectionStrings": {
    "AppDbContext": ""
  },
  "Images": {
    "SourceUrl": "https://picsum.photos/id",
    "DetailBackgroundSize": {
      "HeightPx": 600,
      "WidthPx": 400
    },
    "ListBackgroundSize": {
      "HeightPx": 300,
      "WidthPx": 400
    }
  },
  "KeyVault": {
    "KeyVaultUrl": "https://cca-cc-rg-01-kv.vault.azure.net/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Security": {
    "AesEncryptionKey": "",
    "AesEncryptionIVector": "",
    "FailedSignInCountMaxLimit": 3,
    "PasswordAgeDaysMax": 180
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "com.barghgir.plc.api"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "zlog_dev_.txt",
          "rollingInterval": "Day",
          "shared": true,
          "flushToDiskInterval": 7
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "shared": true,
          "flushToDiskInterval": 5
        }
      }
    ]
  }
}